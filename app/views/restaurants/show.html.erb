<%= link_to "Back to all Restaurants", restaurants_path %><br>
<%= link_to "Edit Restaurant Information", edit_restaurant_path(@restaurant) %>
<h2><%= @restaurant.name %></h2>
<h5>Address: <%= @restaurant.address %></h5>
<h5>Phone Number: <%= @restaurant.phone %></h5>

<h3>Current Reviews For <%= @restaurant.name %></h3>
<% @restaurant.reviews.each do |review| %>
  <p>

      Comment: <%= review.comment %><br>
    </p>
<% end %>


<h3>Current Reservations For <%= @restaurant.name %></h3>
<% @restaurant.reservations.each do |reservation| %>
  <p>
    <% if reservation.user != nil %>
      Date/Time: <%= reservation.time %><br>
      Party Size: <%= reservation.size %><br>
      Booked By: <%= reservation.user.name %>
    <% end %>
    </p>
    <% if current_user && (current_user.id == reservation.user_id) && reservation.id %>
      <%= link_to "Edit Reservation", edit_restaurant_reservation_path(@restaurant.id, reservation.id) %>
      <%= link_to "Cancel Reservation", restaurant_reservation_path(@restaurant, reservation), method: :delete %>
    <% end %>
<% end %>

<% if current_user %>
    <h3>Book a Reservation</h3>
    <%= render 'reservation' %>
  <% else %>
    <p>Please <%= link_to "Log In", new_session_path %> to create a reservation</p>
<% end %>


<h3>Write a review</h3>
<%= render 'reviews/review' %>
