<body class="background">
  <h1 class="headers">Pick a restaurant to make a reservation</h1>


<div class="restaurant_container">
<% @restaurants.each do |restaurant| %>
<div class="restaurant">
  <div class="restaurant_name"> <%= restaurant.name %> </div>
    <ul>
      <li class="restaurant_info"> Address: <%= restaurant.address %></li><br>
      <li class="restaurant_info"> Phone Number: <%=restaurant.phone %></li>
    </ul>
<h5><%= link_to "View Restaurant/Book Reservation", restaurant_path(restaurant.id) %></h5>
</div>
<% end %>
</div>

<% if current_user %>
  <div class="links"><%= link_to "Create a New Restaurant", new_restaurant_path %></div>
<% end %>

</body>
