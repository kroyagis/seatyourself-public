<h1>Edit Page</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>
<%= form_for @restaurant do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
